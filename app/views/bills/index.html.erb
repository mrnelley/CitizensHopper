<p id="notice"><%= notice %></p>

<h1>Listing Bills</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= link_to bill.title, bill %></td>
        <td><%= bill.kind%></td>
        <td><%= link_to bill.content, bill.content, :target => "_blank" %></td>
        <td><%= bill.sponsor%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "Congressional Bills", get_bills_path %>
<%= link_to 'Create New Bill', new_bill_path %>
