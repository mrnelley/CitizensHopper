<p id="notice"><%= notice %></p>

<h1>Listing Bills</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_created_bills.each do |bill| %>
      <tr>
        <td><%= bill.title %></td>
        <td><%= bill.kind %></td>
        <td><%= bill.content %></td>
        <td><%= link_to 'Show', user_created_bill %></td>
        <td><%= link_to 'Edit', edit_user_created_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', user_created_bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

